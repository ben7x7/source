<div class="section-contact">
  <div class="contact-form-wrapper">
    <h1 class="form-title">CONTACT</h1>
    <p class="subtitle">Let's talk about your project !</p>
    <div class="form contact-form">
      <div class="input-form">
        <label for="name" class="label-name">Name:</label>
        <input type="text" name="name" required />
      </div>
      <div class="input-form">
        <label for="email" class="label-name">Email:</label>
        <input type="email" name="email" required />
      </div>
      <div class="input-form" id="textarea">
        <label for="message" class="label-name">Message:</label>
        <textarea row="3" id="message" name="message" required ></textarea>
      </div>
      <button type="submit" class="btn btn-submit">SEND</button>
    </div>
  </div>
</div>
